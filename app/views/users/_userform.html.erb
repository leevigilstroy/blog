<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @user do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <%= f.button :submit, "Save", class: "btn btn-primary" %>
    <% end %>
    

  </div>
</div>